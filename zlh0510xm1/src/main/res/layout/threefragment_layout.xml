<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/tf_xrecycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
    <RelativeLayout
        android:id="@+id/linnnn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="7dp">

        <CheckBox
            android:id="@+id/gouwu_quan_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gouwu_text_view_zong"
            android:layout_width="@dimen/dp_200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center"
            android:text="价格￥ O.00"
            android:textSize="@dimen/dp_20" />

        <Button
            android:id="@+id/shop_go"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FF5F71"
            android:gravity="center"
            android:text="去结算"
            android:textColor="#fff"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gouwu_recvview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
