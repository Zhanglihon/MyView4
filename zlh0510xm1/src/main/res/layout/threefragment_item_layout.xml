<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/threeselector"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/three_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/three_image_view"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/three_text_view"
                android:layout_width="@dimen/dp_170"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="数据"/>
            <TextView
                android:id="@+id/three_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:text="价格"/>
        </LinearLayout>
        <TextView
            android:id="@+id/three_text_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:text="-"/>
        <TextView
            android:id="@+id/three_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="5dp"
            android:text="1"/>
        <TextView
            android:id="@+id/three_text_jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="5dp"
            android:text="+"/>
    </LinearLayout>

</LinearLayout>
